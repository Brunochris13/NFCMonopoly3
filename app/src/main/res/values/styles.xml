<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="game_fragment_btn">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="game_fragment_btn.primary">
        <item name="android:backgroundTint">@color/game_button_bg_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/game_button_bg_color_secondary</item>
    </style>

    <style name="game_fragment_btn.secondary">
        <item name="android:backgroundTint">@color/game_button_bg_color_secondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/game_button_bg_color_primary</item>
    </style>

    <style name="bank_and_free_parking_buttons">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">-1dp</item>
    </style>

    <style name="property_layout">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">400dp</item>
    </style>

    <style name="property_layout_small">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="property_title">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="property_title_small">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="property_details">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="property_details_small">
        <item name="android:textSize">5sp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_width">26dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="property_button_layout">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="property_button_title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintVertical_bias">0.2</item>
    </style>

    <style name="property_button_subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="trade_fragment_player_name">
        <item name="android:textSize">24sp</item>
    </style>
</resources>